.menu {
  &--color-white {
    color: #fff;
  }
}
.menu__list {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  .menu__item:hover{
    color: #5500F2;
    text-decoration: underline;
  }
}

.menu__item {
  // margin-right: 60px;
  margin-right: 8%;
  &:last-child {
    margin-right: 0;
  }
}

.menu__link {
  text-decoration: none;
  white-space: nowrap;
}