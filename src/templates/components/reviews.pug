script(type="text/x-template")#reviews
  .reviews
    .reviews__header
      .reviews__title.section-title Что обо мне говорят
      .reviews__buttons
        button(type="button" @click="previous()" ref="prevButton" :class="{ reviews__btn_disable: position}").reviews__btn.reviews__btn_prev
        button(type="button" @click="next()" ref="nextButton").reviews__btn.reviews__btn_next
    flickity(ref="flickity" :options="flickityOptions").reviews__content
      .reviews__content-item(v-for="review in reviews")
        .quote
          .quote__text
            p {{review.text}}
          .quote__user
            .user-min
              .user-min__avatar
                .user-min__pic-wrapper
                  img(:src="`/${review.photo}`").user-min__photo
              .user-min__info
                .user-min__name {{review.author}}
                .user-min__occ {{review.position}}

